<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/closeDialog"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_close_grey600_24dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:text="0.00"
        android:ems="10"
        android:id="@+id/editTextSummary"
        android:layout_below="@+id/closeDialog"
        android:layout_alignLeft="@+id/closeDialog"
        android:layout_alignStart="@+id/closeDialog"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/submitButton"
        android:gravity="top"
        >
    <requestFocus/>
    </EditText>
    <Button
        android:id="@+id/submitButton"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/gray"
        android:text="Done"
        style="?android:attr/borderlessButtonStyle"
        android:theme="@style/SubmitButton"/>


</RelativeLayout>